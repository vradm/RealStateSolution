@model RealState.Areas.Admin.Models.AccountModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap3.3.7.min.js"></script>

<br />
<style>
    .form-signin {
        max-width: 380px;
        padding: 15px 35px 45px;
        background-color: #fff;
        border: 1px solid rgba(0,0,0,0.3);
    }

    .form-control {
        position: relative;
        font-size: 16px;
        height: auto;
        padding: 10px;
    }
</style>


<div class="wrapper">
    <div class="col-md-12">
        <div class="col-md-4 col-md-offset-1 col-sm-12" style="font-style:italic">
            @*<div><h1>Project Contails</h1></div>
                <h4>1. Employee Management</h4>
                <h4>2. Salary Management</h4>*@
            <br />

            <hr />
            <br />
            @*<p><b style="color:green;">Note:</b></p>*@
            @*<p>* Add,Update,Delete Employee Record.</p>
                <p>* Add,Update,Delete Salary of the Employee.</p>*@
        </div>
        <div class="col-md-6 col-md-offset-1 col-sm-12">
            <form class="form-signin" action="/Account/Login" method="post">
                <h2 class="form-signin-heading">Please login</h2>
                <br />
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @required = "required", @placeholder = "UserName" })
                <br />
                @Html.TextBoxFor(x => x.password, new { @class = "form-control", @required = "required", @placeholder = "Password", @type = "password" })
                <br />

                <input type="submit" class="btn btn-lg btn-primary btn-block" value="Login" />
                <br />

                <button class="btn" data-toggle="modal" data-target="#exampleModalCenter">Forgot Password?</button>
                <br />
                <div class="control-group">
                    <span id="ResponseMessage"><span style="color:Red">@TempData["Message"]</span></span>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Forget Password</h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Enter your email or username to create a new password</p>
                Enter Email Id or Username:<input type="text" id="Txt_Emailid" class="form-control" />
                <p>On Submit, an email with a link to create a password will be sent to your email</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary mr-auto">Retrive Password</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>